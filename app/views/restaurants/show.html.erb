  <div class="col-md-9">
 	<% if @reviews.blank? %>
 	  <h3>No reviews yet. So, you must write one!</h3>
 	<% else %>
   	<% @reviews.each do |review| %>
  		<p><%= review.rating %></p>
  		<p><%= review.comment %></p>
		 <% end %>
		<% end %>
  	</div>
  </div>
    
<br>
