  <div class="col-md-3">
  
 <h2>
 	<%= @restaurant.name %>
 </h2>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%=  link_to @restaurant.website, @restaurant.website %>
</p>
